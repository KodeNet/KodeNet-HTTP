	#uptime {
		text-align: center;
		clear: both;
		position: relative;
		bottom: 3em;
		color: black;
	}

	#clock {
		position: absolute;
	}

	.page-wrap {
		position: relative;
		width: 500px;
		margin: 0 auto;
	}

	link {
		color: #FF4E0D;
	}

	a:visited {
		color: #FF4719;
	}

	a:link {
		color: #FF4E0D;
	}

	a:hover {
		color: #676767;
	}
